<Page x:Class="demo.Pages.User_buttons"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:demo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="180"
      Title="User_buttons">

    <Grid>
        <Button HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="30" Margin="0,0,0,0" Click="New_Request_Click">Новая заявка</Button>
        <Button HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="30" Margin="0,50,0,0" Click="Request_list_Click">Список заявок</Button>
        <Button HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="30" Margin="0,100,0,0" Click="Exit_Click">Выход</Button>
    </Grid>
</Page>
